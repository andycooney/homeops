{
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["patch"]
    },
    {
      "matchDatasources": ["docker"],
      "addLabels": ["container"]
    },
    {
      "matchDatasources": ["helm"],
      "addLabels": ["helm"]
    },
    {
      "matchDatasources": ["galaxy"],
      "addLabels": ["ansible"]
    },
    {
      "matchDatasources": ["terraform"],
      "addLabels": ["terraform"]
    }
  ]
}
