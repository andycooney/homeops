---
version: "3.8"

services:
  backup-opnsense:
    image: docker.io/rclone/rclone:1.57.0
    container_name: backup-opnsense
    network_mode: host
    command:
      - "-v"
      - "--config"
      - "/config/rclone.conf"
      - "sync"
      - "--ignore-errors"
      - "--fast-list"
      - "--b2-hard-delete"
      - "--transfers"
      - "20"
      - "--checkers"
      - "20"
      - "--bwlimit"
      - "20M"
      - "minio:opnsense/"
      - "b2:opnsense-d5b252ad/"
    volumes:
      - "{{ containers_base_dir }}/apps/rclone/rclone.conf:/config/rclone.conf:ro"
