{
  "packageRules": [
    {
      "groupName": "external-snapshotter-suite",
      "matchPackagePatterns": [
          "external-snapshotter",
          "snapshot-controller"
      ],
      "matchDatasources": [
          "docker",
          "github-releases"
      ],
      "separateMinorPatch": true,
      "stabilityDays": 1
    },
    {
      "groupName": "rook-ceph-suite",
      "matchPackagePatterns": [
          "rook.ceph"
      ],
      "matchDatasources": [
          "docker",
          "helm"
      ],
      "separateMinorPatch": true
    },
    {
      "groupName": "system-upgrade-controller-suite",
      "matchPackagePatterns": [
          "rancher/system-upgrade-controller"
      ],
      "matchDatasources": [
          "docker",
          "github-releases"
      ],
      "separateMinorPatch": true
    },
    {
      "groupName": "thanos-suite",
      "matchPackagePatterns": [
          "thanos"
      ],
      "matchDatasources": [
          "docker",
          "helm"
      ],
      "matchUpdateTypes": [
          "minor",
          "patch"
      ]
    },
    {
      "groupName": "vector-suite",
      "matchPackagePatterns": [
          "vector"
      ],
      "matchDatasources": [
          "docker",
          "github-releases",
          "helm"
      ],
      "matchUpdateTypes": [
          "minor",
          "patch"
      ]
    }
  ]
}
