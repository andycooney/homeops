{
  "enabled": true,
  "timezone": "America/New_York",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitMessageSuffix": "[ci-skip]",
  "commitBody": "Signed-off-by: Devin Buhl <onedr0p@users.noreply.github.com>",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "assignees": ["@onedr0p"],
  "helm-values": {
    "fileMatch": ["cluster/.+\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["cluster/.+\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "datasources": ["docker"],
      "labels": ["renovate/image-release"]
    },
    {
      "datasources": ["helm"],
      "labels": ["renovate/helm-release"]
    },
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>.*)$",
      "packageNames": ["blakeblackshear/frigate"]
    },
    {
      "datasources": ["docker"],
      "versioning": "loose",
      "packageNames": ["plexinc/pms-docker"]
    },
    {
      "datasources": ["docker"],
      "allowedVersions": "<4.3.0",
      "packageNames": ["k8sathome/qbittorrent"]
    },
    {
      "datasources": ["docker"],
      "versioning": "nuget",
      "packageNames": ["k8sathome/radarr", "k8sathome/sonarr", "k8sathome/lidarr", "k8sathome/bazarr"]
    },
    {
      "datasources": ["docker"],
      "automerge": true,
      "updateTypes": ["minor", "patch"],
      "packageNames": ["k8sathome/ombi", "k8sathome/jackett"]
    }
  ]
}
