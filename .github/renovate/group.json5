{
  "packageRules": [
    {
      "groupName": "external-snapshotter-suite",
      "matchPackagePatterns": [
        "external-snapshotter",
        "snapshot-controller"
      ],
      "matchDatasources": [
        "docker",
        "github-releases"
      ]
    },
    {
      "groupName": "kube-prometheus-stack-suite",
      "matchPackagePatterns": [
        "kube-prometheus-stack"
      ],
      "matchDatasources": [
        "github-releases",
        "helm"
      ],
      "separateMinorPatch": true
    },
    {
      "groupName": "rook-ceph-suite",
      "matchPackagePatterns": [
        "rook.ceph"
      ],
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "separateMinorPatch": true
    },
    {
      "groupName": "system-upgrade-controller-suite",
      "matchPackagePatterns": [
        "rancher/system-upgrade-controller"
      ],
      "matchDatasources": [
        "docker",
        "github-releases"
      ],
      "separateMinorPatch": true
    },
    {
      "groupName": "thanos-suite",
      "matchPackagePatterns": [
        "thanos"
      ],
      "matchDatasources": [
        "docker",
        "github-releases",
        "helm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "vector-suite",
      "matchPackagePatterns": [
        "vector"
      ],
      "matchDatasources": [
        "docker",
        "github-releases",
        "helm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
